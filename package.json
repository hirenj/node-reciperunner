{
  "name": "published-sitedata",
  "version": "0.0.1",
  "description": "Published PTM / Site data",
  "main": "index.js",
  "scripts": {
    "lint": "./node_modules/jshint/bin/jshint lib bin/run_recipe",
    "validate": "npm ls",
    "test:pullrequest" : "filenames=$((for dir in `git --no-pager diff --name-only FETCH_HEAD $(git merge-base FETCH_HEAD master)`; do dirname $dir; done) | sort -u | paste -s -d, -); npm test -- --input $filenames",
    "test:full": "node bin/run_recipe --silent",
    "test": "node bin/run_recipe --silent --debug 10 --validate"
  },
  "author": "Hiren Joshi",
  "license": "ISC",
  "dependencies": {
    "coerce-tabular": "^1.0.0",
    "excel-stream": "^1.1.1",
    "glob": "^7.0.5",
    "jshint": "^2.9.2",
    "jsonpath-object-transform": "hirenj/jsonpath-object-transform",
    "jsonschema": "^1.1.0",
    "lambda-helpers": "hirenj/lambda-helpers",
    "map-tabular-keys": "^1.0.0",
    "nconf": "^0.8.4",
    "precommit-hook": "^3.0.0",
    "snake-case": "^2.1.0",
    "tabular-stream": "^2.0.1"
  },
  "pre-commit": [
    "lint",
    "validate",
    "test"
  ]
}
